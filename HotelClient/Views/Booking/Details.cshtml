@model HotelClient.Models.BookingViewModel

@{
    ViewData["Title"] = "Booking Details";
}

<h2>Booking Details</h2>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.HotelBranch)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.HotelBranch)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CheckIn)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CheckIn)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CheckOut)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CheckOut)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TotalPrice)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TotalPrice)</dd>
    </dl>

    <h3>Rooms</h3>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Rooms.First().RoomType)</th>
                <th>@Html.DisplayNameFor(model => model.Rooms.First().NumberOfAdults)</th>
                <th>@Html.DisplayNameFor(model => model.Rooms.First().NumberOfChildren)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model.Rooms)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => room.RoomType)</td>
                    <td>@Html.DisplayFor(modelItem => room.NumberOfAdults)</td>
                    <td>@Html.DisplayFor(modelItem => room.NumberOfChildren)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
</div>
